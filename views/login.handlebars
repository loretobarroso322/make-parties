<!-- views/login.handlebars -->
<div class="col-lg-6 offset-lg-3 w-50">
  <div class="card mx-3 p-3">
    <form action="/login" method="POST">
      <h2>Login</h2>
      <div class="form-group">
        <label for="title">Email</label>
        <input type="email" name="email" class="form-control" placeholder="Email">
      </div>
      <div class="form-group">
        <label for="title">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Password" />
      </div>
      <!-- <input type="checkbox"></input> Sign me up for weekly newsletters, offers and promotions -->
      <div class="text-right">
        <button href="/" type="submit" class="btn btn-primary" name="button">Login</button>
      </div>
    </form>
  </div>
</div>
